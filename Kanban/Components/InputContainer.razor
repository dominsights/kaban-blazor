@using MudBlazor

<MudCollapse Expanded=@(!open)>
    <InputCard setOpen=setOpen></InputCard>
</MudCollapse>
<MudCollapse Expanded=@open>
    <MudPaper Elevation=0
              @onclick=@(() => setOpen(!open))>
              <MudText>+ Add a Card</MudText>
    </MudPaper>
</MudCollapse>

@code {
    private bool open;
    private void setOpen(bool value)
    {
        open = value;
    }
}
